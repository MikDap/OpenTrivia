<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#062E40">

    <TextView
        android:id="@+id/congratulazioni"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="164dp"
        android:background="#AEA3A7"
        android:gravity="center"
        android:text="HAI PAREGGIATO"
        android:textAlignment="center"
        android:textColor="#121010"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/esci"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:background="#4E4D4D"
        android:text="Esci"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@id/nuova1"
        app:layout_constraintStart_toStartOf="@id/nuova1"
        app:layout_constraintTop_toTopOf="@id/nuova1" />

    <Button
        android:id="@+id/statistiche"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:drawableBottom="?android:attr/actionModeFindDrawable"
        app:layout_constraintRight_toLeftOf="@id/congratulazioni"
        app:layout_constraintStart_toStartOf="@id/congratulazioni"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/nuova1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="240dp"
        android:layout_marginRight="20dp"
        android:background="#FF9800"
        android:text="Nuova Partita"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@id/congratulazioni"
        app:layout_constraintStart_toStartOf="@id/congratulazioni"
        app:layout_constraintTop_toTopOf="@id/congratulazioni" />


</androidx.constraintlayout.widget.ConstraintLayout>

