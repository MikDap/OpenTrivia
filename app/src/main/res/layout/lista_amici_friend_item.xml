<?xml version="1.0" encoding="utf-8"?>
<!-- friend_item_layout.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical"
    android:background="#062E40">

    <TextView
        android:id="@+id/textViewFriendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "aaaa"
        android:background="@drawable/custom_border_pareggio"
        android:padding="6dp"
        android:textSize="24sp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/clickableImage"
        android:layout_width="52dp"
        android:layout_height="39dp"
        android:src="@drawable/addfriend"
        android:onClick="onImageClick"
        android:contentDescription="Immagine Cliccabile"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_border_pareggio"
        />


    <ImageView
        android:id="@+id/CheckImage"
        android:layout_width="52dp"
        android:layout_height="39dp"
        android:src="@drawable/check"
        android:contentDescription="Immagine Cliccabile"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_border_orange"
        />


    <!-- Altri elementi per visualizzare altre informazioni sugli amici, se necessario -->

</RelativeLayout>
